.intro
	margin 0 auto
	padding 6rem 1rem 0 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center
		text-transform uppercase
		font-family $sans
		span
			display block
			line-height 1.1
			letter-spacing 0.05em
			&:nth-child(1)
				font-weight 200
				set-type-size(xx-large, false)
				+mq('bp-3')
					set-type-size(xxx-large, false)
			&:nth-child(2)
				font-weight 700
				background -webkit-linear-gradient(45deg, darken($wrong-med, 5), darken($correct-med, 5) 80%)
				-webkit-background-clip text
				-webkit-text-fill-color transparent
				set-type-size(xxx-large, false)
				+mq('bp-3')
					set-type-size(xxxxx-large, false)
			&:nth-child(3)
				font-weight 500
				set-type-size(xxx-large, false)
				+mq('bp-3')
					set-type-size(xxxxx-large, false)
				letter-spacing 0.1em
		
	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
	
	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		text-transform uppercase
		letter-spacing 0.05em
		a
			// border none
			letter-spacing 0.05em
	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
