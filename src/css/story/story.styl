/* CUSTOM STORY STYLE */

#graphic
	padding-bottom 5rem

.graphic__result
	max-width $column-width
	margin 0 auto
	svg
		margin 0 auto
		display block
	.node
		opacity 0
		&.is-hidden
			opacity 0
		&.is-correct
			text
				// fill green
		&.is-guess
			opacity 1
			text
				fill magenta
		&.is-visible
			opacity 1
				
		text
			font-family monospace
			font-size 24px
			font-weight bold
			text-transform uppercase
		.text--bg
			fill none
			stroke-width 3px
			stroke $bg

	.link
		fill none
		stroke lightgray
		stroke-opacity 1
		opacity 0
		&.is-hidden
			opacity 0
		&.is-correct
			// stroke lightgreen
		&.is-guess
			opacity 1
			stroke violet
		&.is-visible
			opacity 1
			

.graphic__question
	display flex
	justify-content center
	input
		font-family $mono
		font-size 32px
		line-height 32px
		padding 8px
		letter-spacing 8px
		text-transform uppercase
		width 30rem
		display block
		font-weight bold
	button
		padding 1rem
		border 1px solid $fg