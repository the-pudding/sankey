/* CUSTOM STORY STYLE */
html
	scroll-behavior smooth

body
	font-family $sans

main
	+mq('bp-4')
		padding 0 3rem
.prose p
	set-type-size(large, true)
	letter-spacing 0.005em
	text-align justify

.prose__hed
	margin 0
	padding-top 3rem
	set-type-size(x-large, true)
	font-weight 700
	text-align center
	text-transform uppercase
	letter-spacing 0.05em

button
	padding 1rem
	border 2px solid $gray
	border-radius 4px
	background $off-white
	font-family $sans

	&.button--skip
		border none
		background transparent
		border-bottom 1px solid currentColor
		padding 0
		margin 0

	&:disabled
		opacity 0.5
		cursor not-allowed


#prelude p
	set-type-size(x-large, true)

#method
	max-width 36rem
	width 90%
	margin 0 auto
	padding 1rem
	background-color $off-white
	border 2px solid $gray-light
	border-radius 3px
	
	.prose p
		set-type-size(root, true)

	.prose__hed
		padding-top 1rem
		set-type-size(medium, true)

