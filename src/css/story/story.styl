/* CUSTOM STORY STYLE */


svg.pudding-chart
	margin 0 auto
	display block
	user-select none
	.node
		opacity 0
		&.is-hidden
			opacity 0
		&.is-guess
			opacity 1
			text
				fill magenta
		&.is-reveal
			opacity 1
			&.is-correct
				text
					fill green
				
		text
			font-family monospace
			font-weight bold
			text-transform uppercase
		.text--bg
			fill none
			stroke-width 3px
			stroke $bg

	.link
		fill none
		stroke lightgray
		stroke-opacity 1
		opacity 0.5
		&.is-hidden
			opacity 0
		&.is-guess
			opacity 1
			stroke violet
		&.is-reveal
			opacity 1
			&.is-correct
				stroke lightgreen
	
