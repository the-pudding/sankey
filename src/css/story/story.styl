/* CUSTOM STORY STYLE */
html
	scroll-behavior smooth

body
	font-family $sans

main
	padding 0 0.75rem
	+mq('bp-4')
		padding 0 3rem
.prose p
	set-type-size(large, true)
	letter-spacing 0.005em
	+mq('bp-3')
		text-align justify

.prose__hed
	margin 0
	padding-top 3rem
	set-type-size(x-large, true)
	font-weight 700
	text-align center
	text-transform uppercase
	letter-spacing 0.05em

a:hover
	background-color lighten($correct, 15)

button
	padding 1rem
	border 2px solid $gray
	border-radius 4px
	background $off-white
	font-family $sans
	letter-spacing 0.02em
	&:hover
		+mq('bp-4')
			background-color lighten($correct, 15)

	&.button--skip
		border none
		background transparent
		border-bottom 1px solid currentColor
		padding 0
		margin 0

	&:disabled
		opacity 0.5
		cursor not-allowed

#prelude
	margin-top 3rem
	p
		set-type-size(large, true)
		+mq('bp-4')
			set-type-size(x-large, true)

#method
	max-width 36rem
	width 90%
	margin 0 auto
	padding 1rem
	background-color $off-white
	border 2px solid $gray-light
	border-radius 3px
	
	.prose p
		set-type-size(root, true)

	.prose__hed
		padding-top 1rem
		set-type-size(medium, true)

#tease
	margin-bottom 3rem

.info
	font-family 'Roboto Mono'
	h1
		line-height 1.25
		margin-bottom 1rem
	p
		margin 0
		&:last-of-type
			font-style italic
	span
		color lighten($correct-dark, 20)
		font-weight 700
		
		

#list
	display none
	.table
		margin-top 3rem

	h3
		font-family 'Roboto Mono'
		// text-transform uppercase
		set-type-size(x-large, false)
		line-height 1
		margin-bottom 1rem
		// letter-spacing 0.1em
		color $wrong-dark
	.name
		font-weight 700
	.description
		color $gray
		margin-left 0.5em
		set-type-size(large, false)

	figure
		// display flex
		// align-items flex-end
		// flex-direction column
		// flex-wrap wrap
		width 100%
		// column-gap 5rem
		column-count 4
		+mq('bp-6')
			column-count 4
			// column-width 300px
		+mq('bp-x')
			column-count 4
		p
			margin 0
			font-family 'Roboto Mono'
			text-transform capitalize
			letter-spacing 0.05em
			font-size 16px
			font-weight 700
			line-height 1.4
			color $fg
			&:nth-child(odd)
				// background-color $off-white

		span:nth-child(2)
			color $gray-light
			font-weight 400
		span:last-child
			font-weight 400
			color $gray
			// font-size 16px
			// transform translateY(-1px)
			margin-left 0.25em
		
		.correct
			color lighten($correct-dark, 20)

#tree
	max-width 80rem
	margin 0 auto
	h1
		transform translate(70px, 220px)
		font-size 42px
		font-weight 700
		margin 0
	p
		transform translate(70px, 220px)
		font-size 24px
		margin 0