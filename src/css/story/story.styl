/* CUSTOM STORY STYLE */
html
	scroll-behavior smooth

.prose p
	set-type-size(medium, true)

.prose__hed
	margin 0
	margin-top 3rem
	set-type-size(x-large, true)
	font-weight 700

button
	padding 1rem
	border 1px solid $fg
	background $off-white
	font-family $sans

	&.button--skip
		border none
		background transparent
		border-bottom 1px solid currentColor
		padding 0
		margin 0

	&:disabled
		opacity 0.5
		cursor not-allowed