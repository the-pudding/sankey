/* CUSTOM STORY STYLE */

#graphic
	padding-bottom 5rem

.graphic__result
	max-width $column-width
	margin 0 auto
	svg
		margin 0 auto
		display block
	.node
		&.is-hidden
			// opacity 0
		&.is-correct
			text
				fill red
		text
			font-family monospace
			font-size 24px
			font-weight bold
			text-transform uppercase
		.text--bg
			fill none
			stroke-width 3px
			stroke $bg

	.link
		fill none
		stroke lightgray
		stroke-opacity 1
		&.is-hidden
			// opacity 0

.graphic__question
	input
		font-family $mono
		font-size 32px
		line-height 32px
		padding 8px
		letter-spacing 8px
		text-transform uppercase
		width 30rem
		display block
		margin 0 auto
		font-weight bold