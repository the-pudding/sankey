@require 'utils/unicode'
@require 'utils/variables'
@require 'utils/helpers'

@require 'utils/reset'
@require 'utils/presets'
@require 'utils/font'
@require 'utils/layout'
@require 'story/*'

main 
	padding 10rem 1rem 0 1rem
	max-width 45rem
	margin 0 auto

section 
	margin 4rem 0

.hed 
	text-align center

.example
	background $off-white
	border-radius 0.2rem
	border 1px solid $gray-light
	whitespace pre-wrap
	padding 0.5rem
	margin 1.5rem 0 3rem 0

code
	font-family $mono
	set-type-size(small, true)

mark
	background-color #ff8
	padding 0.25em 0.5em

.graphic
	max-width $column-width
	margin 0 auto
	&__chart
		width 100%
		height 20vh
		background-color #ff8
			