// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-2: '(min-width: 20em)' // 320px
    bp-3: '(min-width: 30em)' // 480px
    bp-4: '(min-width: 40em)' // 640px
    bp-5: '(min-width: 50em)' // 800px
		bp-6: '(min-width: 60em)' // 960px
		bp-x: '(min-width: 85em)'
}

// -------------------
// Typefaces
// -------------------
$national = 'National 2 Narrow Web'
$tiempos = 'Tiempos Text Web'
$atlas = 'Atlas Grotesk Web'
$publico = 'Publico Text Web'

$sans-fb = Helvetica, Arial, sans-serif
$sans = $national, $sans-fb
$serif-fb = Georgia, Times, serif
$serif = $tiempos, $serif-fb
$serif-hed-fb = 'Times New Roman', serif
$mono = Menlo, Consolas, Monaco, 'Courier New', monospace

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 1000
}

// Color
$black = #000
$off-black = #282828
$gray-dark = #5b5b5b
$gray = #949494
$gray-light = #d9d9d9
$off-white = #f4f4f4
$white = #fff

$bg = #fff
$fg = $off-black

$blue2 = #72e5ef
$red = #ffb2be
$green = #7adc6e
$blue2-dark = darken($blue2, 40)
$red-dark = darken($red, 40)
$green-dark = darken($green, 40)

$purple = #bdd0fe
$purple-dark = darken($purple, 50)
$purple-med = darken($purple, 10)
$blue = #78d9ed
$blue-dark = darken($blue, 45)
$blue-med = darken($blue, 10)
$pink = #febde1
$pink-dark = darken($pink, 50)
$pink-med = darken($pink, 10)


// v2
$correct = $blue
$wrong = $pink
$guess = $purple
$correct-dark = $blue-dark
$wrong-dark = $pink-dark
$guess-dark = $purple-dark
$correct-med = $blue-med
$wrong-med = $pink-med
$guess-med = $purple-med

$primary= $off-black

$column-width = 34rem

$type-size = {
    xxx-small: {
