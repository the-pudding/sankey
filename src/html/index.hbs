<!doctype html>
<html lang='en' data-version='{{timestamp}}'>

<head>

	{{> base/meta}}

	<!-- smoosh -->
	<link rel='stylesheet' href='bundle.css' />
	<!-- endsmoosh -->

	{{> base/font}}

	<!-- smoosh -->
	<script src='critical.js'></script>
	<!-- endsmoosh -->

	{{> base/analytics }}

</head>

<body>

	{{> base/header 'sticky'}}

	<main id='content'>

		{{> story/intro }}

		<section id='prelude'>
			<div class='prose'>
				{{#each doc.prelude}}
				<p>{{{value}}}</p>
				{{/each}}
			</div>
		</section>

		<section id='tutorial'>
			<div class='prose'>
				<h3 class='prose__hed'>{{{doc.tutorialHed}}}</h3>
				{{#each doc.tutorial}}
				<p>{{{value}}}</p>
				{{/each}}
			</div>
			<div class='tutorial__content'></div>
		</section>
		<section id='quiz'>
			<div class='prose'>
				<h3 class='prose__hed'>{{{doc.quizHed}}}</h3>
				{{#each doc.quiz}}
				<p>{{{value}}}</p>
				{{/each}}
			</div>
			<div class='quiz__content'></div>
			<nav class='quiz__nav'>
				<button class='btn btn--new'>{{{doc.buttonNew}}}</button>
				<button class='btn btn--all'>{{{doc.buttonAll}}}</button>
			</nav>
		</section>
		<section id='all'></section>
		<audio class='hide-display'></audio>

	</main>

	
	<script src='{{basepath}}assets/scripts/d3.v5.8.0.min.js'></script>
	<script src='bundle.js?version={{timestamp}}' async></script>
	{{!-- <script src='https://pudding.cool/assets/scripts/pudding-footer.js' async></script> --}}
</body>

</html>